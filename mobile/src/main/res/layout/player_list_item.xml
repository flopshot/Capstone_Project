<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/player_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeight"
    android:contentDescription="@string/playerListCD">

    <ImageView
        android:id="@+id/ic_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_player"
        android:contentDescription="@string/playerIconCD"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_player"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:ems="8"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Matt"/>

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_player"
        android:layout_below="@id/firstNameLabel"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:ems="8"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Formica"/>

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_edit"
        android:contentDescription="@string/playerIconCD"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>