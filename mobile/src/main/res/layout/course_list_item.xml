<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/player_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/courseIconCD">

    <ImageView
        android:id="@+id/ic_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_gallery"
        android:contentDescription="@string/courseIconCD"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/clubNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        tools:text="Angel Park"
        android:layout_toEndOf="@id/ic_course"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:ems="8"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/courseNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        tools:text="Cloud 9"
        android:layout_toEndOf="@id/ic_course"
        android:layout_below="@id/clubNameLabel"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:ems="8"
        android:lines="1"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_edit"
        android:contentDescription="@string/courseIconCD"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</RelativeLayout>